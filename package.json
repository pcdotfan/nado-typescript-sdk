{
  "name": "nado-sdk-monorepo",
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "clean": "rm -rf .nx && lerna run clean",
    "dev": "lerna run dev",
    "gen-typedoc": "typedoc",
    "link-local": "./setup-yarn-links.sh",
    "lint": "eslint --cache --fix './**/*.{ts,tsx}' && prettier --write './**/*.{ts,tsx}'",
    "format": "prettier --write './packages/**/*.{js,jsx,ts,tsx,css,md}' --log-level warn",
    "prepare": "husky",
    "publish-all": "yarn clean && yarn build && npx lerna publish --force-publish --no-private",
    "test": "jest",
    "typecheck": "lerna run typecheck",
    "unlink-local": "UNLINK=true ./setup-yarn-links.sh",
    "depcruise:all": "depcruise packages/* apps/*"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "22.17.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "dependency-cruiser": "17.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-file-path-extensions": "^2.1.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lerna": "^9.0.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "4.3.0",
    "ts-jest": "^29.4.4",
    "tsup": "^8.5.0",
    "tsx": "4.20.6",
    "typedoc": "^0.28.13",
    "typedoc-plugin-extras": "^4.0.1",
    "typedoc-plugin-missing-exports": "^4.1.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  },
  "resolutions": {
    "@jest/globals": "^30.0.3",
    "viem": "2.39.0",
    "axios": "^1.10.0",
    "ts-mixer": "^6.0.4"
  },
  "packageManager": "yarn@1.22.22"
}
